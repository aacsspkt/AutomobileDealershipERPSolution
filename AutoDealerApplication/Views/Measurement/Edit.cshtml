@model Measurement

@{
    ViewData["Title"] = "Edit";
}


<div class="container mb-3">
    <div class="row">
        <div class="col">
            <h2>Edit Measurement</h2>
        </div>
    </div>
</div>
<hr />
<div class="container">
    <div class="row">
        <div class="col-md-6 col-lg-4">
            <form asp-action="Edit">
                <div asp-validation-summary="All" class="mb-2 text-danger"></div>
                <input type="hidden" asp-for="Id" />
                <div class="form-group mb-2">
                    <label asp-for="Code" class="control-label"></label>
                    <input asp-for="Code" class="form-control" />
                    <span asp-validation-for="Code" class="text-danger"></span>
                </div>
                <div class="form-group mb-2">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group mb-2">
                    <label asp-for="Description" class="control-label"></label>
                    <input asp-for="Description" class="form-control" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <input type="submit" value="Submit" class="btn btn-sm btn-primary" style="width:10rem" />
                </div>
                <div class="mb-2">
                    <a asp-controller="Measurement" asp-action="Details" asp-route-id="@Model.Id" class="btn btn-sm btn-secondary" style="width:10rem">Back To Details</a>
                </div>
            </form>
        </div>
    </div>

</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
