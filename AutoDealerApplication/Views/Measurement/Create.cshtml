@model Measurement
@{
    ViewData["Title"] = "Create";
}

<div class="container mb-3">
    <div class="row">
        <div class="col">
            <h2>Create Measurement</h2>
        </div>
    </div>
</div>
<hr />
<div class="container">
    <div class="row">
        <div class="col-md-6 col-lg-4">
            <form method="post" asp-action="Create">
                <div class="mb-2 text-danger" asp-validation-summary="All" style="width:25rem">
                </div>
                <div class="form-group mb-2">
                    <label asp-for="Code" class="form-label"></label>
                    <input asp-for="Code" type="text" class="form-control form-control-sm " id="measurement_code">
                    <span asp-validation-for="Code" class="text-danger"></span>
                </div>
                <div class="form-group mb-2">
                    <label asp-for ="Name" class="form-label"></label>
                    <input asp-for="Name" type="text" class="form-control form-control-sm" id="measurement_name">
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="Description" class="form-label"></label>
                    <input asp-for="Description" type="text" class="form-control form-control-sm" id="measurement_description">
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <input type="submit" value="Submit" class="btn btn-sm btn-primary" style="width:10rem" />
                </div>
                <div class="mb-2">
                    <a asp-controller="Measurement" asp-action="Index" class="btn btn-sm btn-secondary" style="width:10rem">Back</a>
                </div>
            </form>

        </div>
    </div>
</div>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}