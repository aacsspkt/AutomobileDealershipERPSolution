@model ICollection<Measurement>
@{
    ViewData["Title"] = "Index";
}

<div class="container mb-3">
    <div class="row">
        <div class="col h2">Measurement lists</div>
    </div>
</div>
<hr />
<div class="container">
    <div class="row mb-3">
        <div class="col">
            <a class="btn btn-sm btn-success" asp-controller="Measurement" asp-action="Create" style="width:10rem;">Create New</a>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <table class="table table-sm table-striped table-bordered table-hover">
                <thead>
                    <tr>
                        <th scope="col">Id</th>
                        <th scope="col">Code</th>
                        <th scope="col">Name</th>
                        <th scope="col">Description</th>
                        <th scope="col">Action</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Count > 0)
                    {
                        @foreach (var item in Model.Select((measurement, i) => new { index = i + 1, measurement }))
                        {

                            <tr ondblclick='window.location="/Measurement/Details/@item.measurement.Id"'>
                                <td scope="row">@item.index</td>
                                <td>@item.measurement.Code</td>
                                <td>@item.measurement.Name</td>
                                <td>@item.measurement.Description</td>
                                <td>
                                    <a class="" asp-action="Details" asp-route-id="@item.measurement.Id">Details</a>
                                </td>
                            </tr>

                        }

                    }
                    else
                    {
                        <tr>
                            <td colspan="4" class="text-center p-4">No data</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>